<script type="text/javascript">
$(function() {
var addDiv = $('#addschools');
alert("hello");
var i = $('#addschools p').size() + 1;
alert(i); 
$('#addNewSchool').live('click', function() {
$('<p><h3 align="center"> SCHOOL - '+i+' </h3><br/\>Name of High School: <input type="text" name="name_school_'+i+'" id="name_school_'+i+'"><br/\><br/\>Date of Joining: <input type="text" name="doj_school_'+i+'" id="doj_school_'+i+'"><br/\><br/\>Date of leaving: <input type="text" name="dol_school_'+i+'" id="dol_school_'+i+'"><br/\><br/\>City: <input type="text" name="city_school_'+i+'" id="city_school_'+i+'"><br/\><br/\>Marks Secured: <input type="text" name="ms_school_'+i+'" id="ms_school_'+i+'"><br/\><br/\>Out of: <input type="text" name="outof_school_'+i+'" id="outof_school_'+i+'"><br/\><br/\></p>').appendTo(addDiv);
i++;	 
alert("finished append");
	return false;
	});

	$('#remNew').live('click', function() {
	if( i > 2 ) {
	$(this).parents('p').remove();
	i--;
	}
	return false;
	});
	});
function SetReadOnly()
{
document.getElementById("uname").readOnly=true;
document.getElementById("address").readOnly=true;
return true;
}
function DisplayTextBox(){
 document.getElementById("address").readOnly=false;
}
</script> 
